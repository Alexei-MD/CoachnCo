<div class="container">
  <div class="banner-offer">
      <% if @offer.photo.key? %>
      <%= cl_image_tag @offer.photo.key, height: 300, width: 1000, crop: :fill %>
      <% else %>
        <img src="https://source.unsplash.com/random/?<%= @offer.sport %>" class="card-img-top" alt="...">
      <% end %>

    <div class="card-offer">
      <%= image_tag "avatar.jpg"%>
        <div class="card-offer-title">
        <br>
          <h2><%= @offer.name %></h2>
          <h3><%= @offer.sport %> avec <%= @offer.user.username %></h3>
        <p><%= @offer.user.bio %></p>
        <p><%= @offer.user.experience %></p>
        <p>blablabla</p>
        </div>
          <div class="card-offer-price">
          <h2><%= @offer.price %> €</h2>
            <div class="card-offer-validation">
              <% if policy(@offer).edit? %>
              <%= link_to "Edit this offer", edit_offer_path, class: "btn btn-primary" %>
              <% end %>
              <%= button_to "Destroy this offer", @offer, class: "btn btn-warning", method: :delete if policy(@offer).destroy?%>
            </div>
          </div>
        </div>
            <% if policy(@offer).edit? == false %>
              <%= simple_form_for [@offer, @session] do |f| %>
                  <%= f.input :start_time, as: :date, html5: true %>
                  <%= f.input :end_time, as: :date, html5: true  %>
                  <%= f.button :submit, "Réserver cette session", class: "btn btn-primary" %>
                <% end %>
            <% end %>
    </div>
  </div>
  </div>
</div>
